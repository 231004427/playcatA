<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#151104" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:bottom="1px" android:right="1px" android:top="1px" android:left="1px">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/white_main"
                android:centerX="0.5"
                android:centerY="0.8"
                android:endColor="@color/white_main_shadow"
                android:startColor="@color/white_main"
                android:type="linear" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp"
                android:bottom="2dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>