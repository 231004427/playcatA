<?xml version="1.0" encoding="utf-8"?>
<com.sunlin.playcat.view.MyLinearLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    tools:context="com.sunlin.playcat.MessageActivity"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/statusLayout"
        toolbar:layout_constraintLeft_toLeftOf="parent"
        toolbar:layout_constraintTop_toTopOf="parent"
        toolbar:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="10dp"
        android:orientation="horizontal"
        toolbar:layout_constraintHorizontal_bias="0.0"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_h"
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@drawable/backgournd_tab"
        toolbar:titleTextColor="@color/textColor">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_w"
            android:layout_width="22dp"
            android:layout_height="22dp"
            toolbar:srcCompat="@drawable/back22" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.sunlin.playcat.view.CircleImageView
                android:id="@+id/imgHead"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/sys_m_45"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/toolbar_title"
                android:layout_toStartOf="@+id/toolbar_title" />
            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/ui_5_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="name"
                android:textColor="@color/textColor"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <ImageView
            android:id="@+id/btnSet"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="@dimen/spacing_w"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/more22" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout4">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/talk_background" />
        <com.sunlin.playcat.view.CircleTitleView
            android:id="@+id/netoffText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/talk_background"
            android:gravity="center"
            android:visibility="gone"
            app:text="@string/loading"
            app:text_color="@color/textColor_low"
            app:text_size="@dimen/text_small"
            app:drawable_left="@drawable/cat22">
        </com.sunlin.playcat.view.CircleTitleView>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/commentLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/downline"
        android:showDividers="middle"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bBar_h"
            android:layout_marginBottom="0dp"
            android:paddingLeft="@dimen/ui_5_dip"
            android:paddingRight="@dimen/ui_5_dip"
            android:background="@drawable/my_tab_back"
            android:orientation="horizontal">
            <ImageView
            android:id="@+id/imgVoice"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            toolbar:srcCompat="@drawable/voice_29" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgText"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                toolbar:srcCompat="@drawable/shuru_29" />
            <Button
                android:visibility="gone"
                android:id="@+id/commentVice"
                android:layout_width="0dp"
                android:background="@drawable/btnbig_white2"
                android:layout_weight="1"
                android:text="按键录音"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ui_5_dip"
                android:layout_marginRight="@dimen/ui_5_dip"
                android:layout_height="29dp" />
            <EditText
                android:id="@+id/commentEdit"
                style="@style/textInput"
                android:background="@drawable/input_white2"
                android:paddingLeft="@dimen/ui_5_dip"
                android:imeOptions="actionSend"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/ui_5_dip"
                android:layout_marginRight="@dimen/ui_5_dip"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/imgEmoj"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                toolbar:srcCompat="@drawable/emoj_29" />

            <ImageView
                android:id="@+id/imgAdd"
                android:layout_marginLeft="@dimen/ui_5_dip"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                toolbar:srcCompat="@drawable/add_29" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearLayoutAdd"
            android:background="@color/talk_background"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/img_60"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_marginLeft="@dimen/spacing_w"
                android:background="@drawable/photo_60"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_marginLeft="@dimen/spacing_w"
                android:background="@drawable/video_60"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>
</com.sunlin.playcat.view.MyLinearLayout>
