<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBtn_enabled"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/nativebar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/include" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/downline"
            android:showDividers="middle"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_w"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/payGoldLayout"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/btn_h_l">
                    <RelativeLayout
                        android:background="@drawable/downline2"
                        android:layout_marginLeft="@dimen/spacing_w"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textView7"
                            android:textSize="@dimen/text_l"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="消息通知" />
                        <ImageView
                            android:id="@+id/btnGold"
                            app:srcCompat="@drawable/right13"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/toolBar"
                            android:layout_height="@dimen/toolBar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/textColor_low"
                            android:textSize="@dimen/text_small"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/btnGold" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/clearLayout"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/btn_h_l">
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/spacing_w"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/text_l"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="清除缓存"
                            android:id="@+id/textView4" />
                        <ImageView
                            android:id="@+id/btnClear"
                            app:srcCompat="@drawable/right13"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/toolBar"
                            android:layout_height="@dimen/toolBar" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已使用:234MB"
                            android:textColor="@color/textColor_low"
                            android:textSize="@dimen/text_small"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/btnClear" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_w"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/sysLayout"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/btn_h_l">
                    <RelativeLayout
                        android:background="@drawable/downline2"
                        android:layout_marginLeft="@dimen/spacing_w"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/sysText"
                            android:textSize="@dimen/text_l"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="当前版本" />
                        <TextView
                            android:id="@+id/redText"
                            android:layout_width="12dp"
                            android:layout_marginLeft="4dp"
                            android:layout_height="12dp"
                            android:background="@drawable/reddot"
                            android:textSize="10dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/sysText"
                            android:layout_toEndOf="@+id/sysText" />
                        <ImageView
                            android:id="@+id/btnVesion"
                            app:srcCompat="@drawable/right13"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/toolBar"
                            android:layout_height="@dimen/toolBar" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="v1.0.0"
                            android:textColor="@color/textColor_low"
                            android:textSize="@dimen/text_small"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/btnVesion" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_w"></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
