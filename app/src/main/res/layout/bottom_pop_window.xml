<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="0dp" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/tv_take_photo"
        style="@style/btnMain"
        android:layout_marginLeft="@dimen/ui_5_dip"
        android:layout_marginRight="@dimen/ui_5_dip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_h_l"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <Button
        android:id="@+id/tv_choose_photo"
        android:layout_marginLeft="@dimen/ui_5_dip"
        android:layout_marginRight="@dimen/ui_5_dip"
        android:layout_marginTop="@dimen/ui_5_dip"
        style="@style/btnMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_h_l"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <Button
        android:id="@+id/tv_cancel"
        android:layout_marginTop="@dimen/spacing_w"
        android:layout_marginLeft="@dimen/ui_5_dip"
        android:layout_marginRight="@dimen/ui_5_dip"
        android:layout_marginBottom="@dimen/ui_5_dip"
        style="@style/btnMain_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_h_l"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="取消" />
</LinearLayout>