<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/backLayout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="添加好友"
        android:textColor="@color/white"
        android:textSize="@dimen/text_l" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/bg_round_black"
        android:padding="@dimen/spacing_w"
        android:gravity="center"
    android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    <EditText
        android:background="@color/white"
        android:id="@+id/inputText"
        style="@style/textInput"
        android:hint="请输入昵称或手机号"
        android:imeOptions="actionDone"
        android:maxLength="11"
        android:lines="1"
        android:padding="@dimen/ui_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="" />
        <com.sunlin.playcat.view.CircleImageView
            android:id="@+id/imgHead"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/boy45"
            app:border_color="@color/white"
            app:border_width="0dp" />
        <TextView
            android:id="@+id/nameText"
            android:visibility="gone"
            android:text="sunlin"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/messText"
            android:visibility="gone"
            android:textSize="@dimen/text_small"
            android:textColor="@color/highlight"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:text="不能为空"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnPrev"
            android:layout_marginTop="@dimen/spacing_w"
            style="@style/btnMain"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="返回修改"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/btnNext"
            android:layout_marginTop="@dimen/spacing_w"
            style="@style/btnMain"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="下一步"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/btnOK"
            android:layout_marginTop="@dimen/spacing_w"
            style="@style/btnMain"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="确定"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/closeImg"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/close38"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_w" />
</LinearLayout>