<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/backLayout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView13"
        android:textSize="@dimen/text_l"
        android:gravity="center"
        android:layout_marginBottom="@dimen/ui_10_dip"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认操作" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_round_black"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_w">

        <TextView
            android:id="@+id/messText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="邀请您成为好友"
            android:textColor="@color/highlight"
            android:textSize="@dimen/text_m"
            android:visibility="visible" />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/ui_10_dip"
    android:layout_height="wrap_content">
    <ImageView
    android:id="@+id/btnClose"
    android:layout_width="38dp"
    android:layout_height="38dp"
    app:srcCompat="@drawable/close38"
        android:layout_marginLeft="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/btnOk"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="22dp"
        app:srcCompat="@drawable/agree38"
        android:layout_alignTop="@+id/btnClose"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

</LinearLayout>