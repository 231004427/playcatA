<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/backLayout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/bg_round_black"
        android:padding="@dimen/spacing_w"
        android:gravity="center"
    android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <com.sunlin.playcat.view.CircleImageView
            android:id="@+id/imgHead"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/boy45"
            app:border_color="@color/white"
            app:border_width="0dp" />
        <TextView
            android:id="@+id/nameText"
            android:visibility="visible"
            android:text="sunlin"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/messText"
            android:visibility="visible"
            android:textSize="@dimen/text_small"
            android:textColor="@color/highlight"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:text="邀请您成为好友"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnOK"
            android:layout_marginTop="@dimen/spacing_w"
            style="@style/btnMain"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="确定"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/close38"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_w" />
</LinearLayout>