<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/gameImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/game1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        style="@style/listTitleWhite"
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gameImg"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gameImg"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:text="飞行棋" />

    <TextView
        style="@style/listTitleWhiteNote"
        android:id="@+id/noteText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="noteText"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"
        android:layout_marginTop="4dp"
        android:layout_alignStart="@+id/nameText" />
    <com.sunlin.playcat.view.DrawableCenterButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textColor="@color/whiteApath"
        android:background="@drawable/btns2_white"
        android:drawablePadding="5dp"
        android:textSize="@dimen/text_small"
        android:text="开始游戏"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/noteText"
        android:layout_alignStart="@+id/noteText" />
</RelativeLayout>