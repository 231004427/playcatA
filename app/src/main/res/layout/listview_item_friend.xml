<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="76dp">
    <com.sunlin.playcat.view.CircleImageView
        android:id="@+id/imgHead"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_w"
        android:src="@mipmap/boy45"
        app:border_color="@color/white"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/nameText"
        android:layout_marginLeft="@dimen/ui_10_dip"
        android:textSize="@dimen/text_l"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imgHead"
        android:layout_toRightOf="@+id/imgHead"
        android:text="name" />
    <TextView
        android:id="@+id/playStatus"
        android:textColor="@color/textColor_low"
        android:textSize="@dimen/text_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ui_10_dip"
        android:text="正在玩"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgGameIco"
        android:layout_toStartOf="@+id/imgGameIco" />
    <ImageView
        android:id="@+id/imgGameIco"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="@dimen/ui_10_dip"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgLeft"
        android:layout_toStartOf="@+id/imgLeft"
        app:srcCompat="@drawable/game1_ico" />

    <ImageView
        android:id="@+id/imgLeft"
        android:layout_marginRight="@dimen/spacing_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/right13" />
</RelativeLayout>