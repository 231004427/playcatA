<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/spacing_w"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/numText"
        android:textColor="@color/red"
        android:textSize="@dimen/text_l"
        android:layout_gravity="center"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="1" />
    <com.sunlin.playcat.view.CircleImageView
        android:layout_marginLeft="@dimen/spacing_w"
        android:id="@+id/imgHead"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/boy45"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_gravity="center"
        android:textColor="@color/textColor_link2"
        android:textSize="@dimen/text_small"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp" />
    <ImageView
        android:id="@+id/imgLevel"
        android:layout_marginLeft="@dimen/ui_5_dip"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="16dp"
        android:layout_toEndOf="@+id/nameText"
        android:layout_toRightOf="@+id/nameText"
        app:srcCompat="@drawable/leve1_16" />
    <TextView
        android:textColor="@color/textColorM"
        android:gravity="right"
        android:textSize="@dimen/text_m"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/point" />
    <TextView
        android:textColor="@color/textColorM"
        android:gravity="left"
        android:textSize="@dimen/text_m"
        android:id="@+id/textPoints"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="123" />
</LinearLayout>