<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/ui_10_dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sunlin.playcat.view.CircleImageView
                android:id="@+id/imgHead_l"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:src="@mipmap/boy45"
                app:border_color="@color/white"
                app:border_width="0dp" />

            <LinearLayout
                android:id="@+id/layout_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgHead_l"
                android:background="@drawable/pao_l"
                android:paddingBottom="10dp"
                android:layout_marginRight="44dp"
                android:paddingTop="10dp"
                android:orientation="vertical" />


            <com.sunlin.playcat.view.CircleImageView
                android:id="@+id/imgHead_r"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:src="@mipmap/girl45"
                app:border_color="@color/white"
                app:border_width="0dp" />

            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgHead_r"
                android:layout_toStartOf="@+id/imgHead_r"
                android:background="@drawable/pao_r"
                android:paddingBottom="10dp"
                android:layout_marginLeft="44dp"
                android:paddingTop="10dp"
                android:orientation="vertical" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_message_time"
        android:id="@+id/textTime"
        android:textSize="@dimen/text_ss"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="1小时前" />
</LinearLayout>