<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bBar_h"
    android:background="@drawable/my_tab_back"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tab_home"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/homeb25"
        android:text="玩猫"/>

    <TextView
        android:id="@+id/tab_shop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/tabBottom"
        android:drawableTop="@drawable/shopb25"
        android:text="兑换" />

    <TextView
        android:id="@+id/tab_friend"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/friendlyb25"
        android:text="好友"/>
<RelativeLayout
android:layout_width="wrap_content"
android:layout_weight="1"
android:layout_height="match_parent">
    <TextView
        android:id="@+id/tab_talk"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/chatb25"
        android:text="消息"/>
    <TextView
        android:id="@+id/redText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/reddot_num"
        android:textSize="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tab_talk"
        android:layout_alignEnd="@+id/tab_talk" />
</RelativeLayout>

    <TextView
        android:id="@+id/tab_set"
        style="@style/tabBottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/profileb25"
        android:text="我" />
</LinearLayout>