<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bBar_h"
    android:background="@drawable/my_tab_back"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tab_home"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/homeb25"
        android:text="玩猫"/>

    <TextView
        android:id="@+id/tab_shop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/tabBottom"
        android:drawableTop="@drawable/shopb25"
        android:text="兑换" />

    <TextView
        android:id="@+id/tab_friend"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/friendlyb25"
        android:text="好友"/>
    <TextView
        android:id="@+id/tab_talk"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/chatb25"
        android:text="聊天"/>
    <TextView
        android:id="@+id/tab_set"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/tabBottom"
        android:drawableTop="@drawable/profileb25"
        android:text="个人"/>
</LinearLayout>