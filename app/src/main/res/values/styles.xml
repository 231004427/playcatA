<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="editTextBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/downline</item>
    </style>

    <style name="textInput">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor_hit</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="btnMain">
        <item name="android:background">@drawable/btnbig</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@drawable/btnbigtext</item>
    </style>
    <style name="btnMain_2">
        <item name="android:background">@drawable/btnbig_green</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@drawable/btnbigtext</item>
    </style>
    <style name="btnMain_3">
        <item name="android:background">@drawable/btnbig_white</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@drawable/btnbigtext</item>
    </style>

    <style name="btnSmall">
        <item name="android:background">@drawable/btns</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@drawable/btncolorwhite</item>
    </style>
    <style name="btnSmall2">
        <item name="android:background">@drawable/btns_y</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@drawable/btncolor_black</item>
    </style>

    <style name="btn_pop">
        <item name="android:textSize">@dimen/text_btn_l</item>
        <item name="android:textColor">@drawable/btnbigtext</item>
        <item name="android:background">@drawable/btnb</item>
    </style>

    <style name="textLink1">
        <item name="android:textColor">@color/textColor_low</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="textLink2">
        <item name="android:textColor">@color/textColor_link</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="line">
        <item name="android:background">@color/lineColor</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <!--模糊-->
    </style>

    <style name="radioBtn">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/textColor_low</item>
        <item name="android:drawableLeft">@drawable/radiobutton</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="popWindow_animation">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="backWindow_animation">
        <item name="android:windowShowAnimation">@anim/alpha_in</item>
    </style>

    <style name="loadingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="textTipLow">
        <item name="android:textColor">@color/textColor_low</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="titleHead">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>
    <style name="titleHeadWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>
    <style name="tabBottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textColor_low</item>
        <item name="android:textSize">@dimen/text_ss</item>
    </style>
    <style name="listTitleWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>
    <style name="listTitleWhiteBig">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>
    <style name="listTitleWhiteNote">
        <item name="android:textColor">@color/whiteApath</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="textNote">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textScaleX">1.0</item>
    </style>
    <style name="textNote2">
        <item name="android:textColor">@color/textColorM</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textScaleX">1.0</item>
    </style>
    <style name="tabLayoutText">
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="dialogBottomAnim">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="titleInput">
        <item name="android:textColor">@color/textColor_low</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>
    <!-- 自定义进度条 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>
</resources>
